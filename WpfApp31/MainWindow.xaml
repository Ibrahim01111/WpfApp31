<Window x:Class="WpfApp31.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp31"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Grid.Row="1" Width="100"
                Height="50"
                Background="Red"
                Content="Click me"
                Foreground="White"
                FontSize="25"
                ></Button>
            <Label Content="Salam" FontSize="50" HorizontalContentAlignment="Center"></Label>
            <Label Content="Salam" FontSize="50" HorizontalContentAlignment="Center"></Label>
            <Label Content="Salam" FontSize="50" HorizontalContentAlignment="Center"></Label>
        </StackPanel>
        
        
        <Label Content="Salam" Foreground="Red" FontSize="100"></Label>
        
        
    </Grid>
</Window>
